@model IEnumerable<NewsApp.Models.Category>

@{
    ViewData["Title"] = "Categories";
}

<h1 class="my-5">@ViewData["Title"]</h1>

<p>
    <a class="btn purple-button" asp-action="Create">Create new category</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    |
                    <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    <a class="btn purple-button ms-5" asp-action="Details" asp-route-id="@item.CategoryId">
                        View relating articles
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
