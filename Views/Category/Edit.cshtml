@model NewsApp.Models.Category

@{
    ViewData["Title"] = "Edit category";
}

<div class="narrow-container">
    <h1 class="my-5">@ViewData["Title"]</h1>
    <div class="col">
        <a class="btn purple-button" asp-action="Index">Back to all categories</a>
    </div>
    <hr />
    <form asp-action="Edit">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="CategoryId" />
        <div class="form-group">
            <label asp-for="Name" class="control-label my-2"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Save changes" class="btn purple-button my-4" />
        </div>
    </form>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
