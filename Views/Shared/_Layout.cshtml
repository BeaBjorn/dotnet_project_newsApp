<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsApp.styles.css" asp-append-version="true" />
    <link rel="icon" type="image/png" href="~/favicon_bee.png" />
    <script src="https://cdn.tiny.cloud/1/76pih9k7wtt7lhgmekpmn2psp1yt2m5842h88mv9bc8qw05v/tinymce/7/tinymce.min.js"
        referrerpolicy="origin"></script>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark mb-3">
            <div class="container">
                @* Logo linking to the index book view rendered with the BookController *@
                <a class="logo me-5" asp-controller="Home" asp-action="Index">
                    <img width="200" class="logo" src="~/images/bee-logotype.svg" alt="bee news logo">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Article" asp-action="Index">News</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-area="" asp-controller="Category" asp-action="Index">Categories</a>
                            </li>
                        }
                    </ul>
                    <hr>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="py-2">
        <p class="text-center pt-3"><i>Skapad av: Beatrice Björn för kursen .NET</i></p>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
